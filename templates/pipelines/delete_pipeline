on:
 push:
   branches:
   - main
   paths:
   - 'cluster/xyz/cluster.yaml'


env:
 AWS_ACCESS_KEY_ID: ${{ secrets.acc }}
 AWS_SECRET_ACCESS_KEY: ${{ secrets.secc }}
 BUCKET_TF_STATE: ${{ secrets.buc }}

jobs:
  build:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v3
      - name: test
        run: |
          ls -la
          mkdir folder
          cd folder
          git clone https://github.com/maxxam123/platform01.git
          cd .github/workflows
          rm -rf $name.yaml
          cd ../../cluster
          rm -rf $name
          cd ..

      - name: Pushes to another repository
        uses: cpina/github-action-push-to-another-repository@main
        env:
          API_TOKEN_GITHUB: ${{ secrets.ACCESS_TOKEN }}
        with:
          source-directory: "folder"
          destination-github-username: "maxxam123"
          destination-repository-name: "platform01"
          user-email: hennighausenmax@gmail.com
          target-branch: main
